{
    "private": true,
    "scripts": {
        "lint": "run-p lint:*",
        "lint:ec": "editorconfig-checker --ignore-defaults --exclude-pattern './{.deployment,.git,bootstrap/cache,coverage,node_modules,resources/fonts,storage,vendor}/**' --exclude-pattern './public/**/*.{css,js,svg}'  --exclude-pattern './**/*.{gif,jpg,png,ico,phar,sqlite,log,otf,tar,gz}'",
        "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore --color .",
        "lint:stylelint": "stylelint --ignore-path .ignore --syntax scss '**/*.scss'",
        "lint:md": "markdownlint *.md .github/*.md doc*/*.md",
        "test:run": "cross-env NODE_ENV=test jest --color $([ \"$CI\" = '' ] && [ \"$COVERAGE\" = '' ] || echo '--coverage')",
        "test": "npm run test:run -- --watch",
        "dev": "npm run development",
        "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch": "npm run development -- --watch",
        "watch-poll": "npm run watch -- --watch-poll",
        "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
        "prod": "npm run production",
        "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "pre-commit": "run-p lint"
    },
    "devDependencies": {
        "@vue/test-utils": "^1.0.0-beta.25",
        "cross-env": "^5.2.0",
        "editorconfig-checker": "^1.3.3",
        "eslint": "^5.8.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-vue": "^4.7.1",
        "flat": "^4.1.0",
        "jest": "^23.6.0",
        "jest-serializer-vue": "^2.0.2",
        "js-yaml": "^3.12.0",
        "laravel-mix": "^2.1.14",
        "markdownlint-cli": "^0.13.0",
        "npm-run-all": "^4.1.3",
        "pre-commit": "^1.2.2",
        "sass-mq": "^5.0.0",
        "stylelint": "^9.7.1",
        "stylelint-config-idiomatic-sass": "^1.0.0",
        "stylelint-config-strict-scss": "^0.5.0",
        "stylelint-scss": "^3.3.2",
        "typi": "^3.2.0",
        "vue": "^2.5.17",
        "vue-carousel": "^0.16.0-rc2",
        "vue-jest": "^3.0.0"
    },
    "pre-commit": [
        "pre-commit"
    ],
    "babel": {
        "env": {
            "test": {
                "presets": [
                    [
                        "env",
                        {
                            "targets": {
                                "node": "current"
                            }
                        }
                    ]
                ]
            }
        }
    },
    "eslintConfig": {
        "extends": [
            "airbnb-base",
            "plugin:vue/essential"
        ],
        "rules": {
            "indent": [
                "error",
                4
            ],
            "import/no-extraneous-dependencies": [
                "error",
                {
                    "devDependencies": true
                }
            ]
        },
        "overrides": [
            {
                "files": "resources/js/**/*.js",
                "excludedFiles": "*.spec.js",
                "env": {
                    "browser": true,
                    "node": false
                }
            },
            {
                "files": "*.spec.js",
                "env": {
                    "jest": true
                }
            }
        ]
    },
    "stylelint": {
        "extends": [
            "stylelint-config-strict-scss",
            "stylelint-config-idiomatic-sass"
        ],
        "rules": {
            "font-weight-notation": null,
            "indentation": 4,
            "max-line-length": 120,
            "scss/at-function-named-arguments": null,
            "scss/at-function-parentheses-space-before": "never",
            "scss/at-mixin-named-arguments": null,
            "scss/at-mixin-parentheses-space-before": "never"
        }
    },
    "jest": {
        "testRegex": ".*\\.spec\\.jsx?$",
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest",
            "^.+\\.vue$": "vue-jest"
        },
        "snapshotSerializers": [
            "jest-serializer-vue"
        ],
        "coverageDirectory": "coverage/js",
        "coverageReporters": [
            "lcov",
            "text",
            "html"
        ]
    }
}
